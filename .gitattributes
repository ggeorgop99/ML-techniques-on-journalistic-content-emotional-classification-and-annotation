# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# Documentation
*.md text diff=markdown
*.txt text
*.rst text

# Data files
*.csv text diff=csv
*.json text diff=json
*.yaml text
*.yml text

# Configuration
*.ini text
*.cfg text
*.conf text

# Scripts
*.sh text eol=lf
*.bat text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.zip binary
*.pdf binary
*.model binary
*.h5 binary
*.pkl binary
*.joblib binary
*.npy binary
*.npz binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
